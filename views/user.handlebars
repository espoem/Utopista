<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a href="https://steemit.com/@{{user}}"><img src="https://steemitimages.com/32x32/https://steemitimages.com/u/{{user}}/avatar" class="rounded mr-2"></a>
        <a class="navbar-brand" href="#">{{user}}'s contributions</a><span class="badge badge-primary">{{total}}</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/user/{{user}}/reviewed">Reviewed <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user/{{user}}/flagged">Flagged</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user/{{user}}/pending">Pending</a>
                </li>
            </ul>
        </div>
    </nav>

    {{>cards}}
    {{>pagination}}
</div>
